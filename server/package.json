{
  "name": "weakly-server",
  "version": "0.1.0",
  "private": true,
  "description": "A tiny server in Koa to accompany a Planner webapp",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "NODE_ENV=dev nodemon ./index.js",
    "start:prod": "NODE_ENV=production node ./index.js",
    "emptyDB": "babel-node ./scripts/maintenance/emptyDatabase.js",
    "initDB": "babel-node ./scripts/maintenance/initDatabase.js",
    "resetDB": "yarn emptyDB; yarn initDB",
    "flow": "flow",
    "test": "jest --testRegex '(.*(test|spec))\\.js$'",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "test:e2e": "jest --runInBand --testRegex '(/__e2e__/.*(test|spec))\\.js$'"
  },
  "dependencies": {
    "@koa/cors": "2",
    "axios": "0.18.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "1.6.0",
    "babel-register": "6.26.0",
    "bcrypt": "^2.0.1",
    "chalk": "^2.4.1",
    "config": "1.30.0",
    "diacritics": "^1.3.0",
    "http-graceful-shutdown": "^2.1.1",
    "jest": "^22.4.3",
    "jsonwebtoken": "^8.2.2",
    "koa": "^2.5.1",
    "koa-body": "^4.0.1",
    "koa-jwt": "^3.3.2",
    "koa-router": "^7.4.0",
    "moment": "^2.21.0",
    "pg": "^7.4.3",
    "raven": "^2.6.2",
    "sequelize": "4.35.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-preset-flow": "6.23.0",
    "eslint": "4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jest": "^21.15.1",
    "flow-bin": "0.71.0",
    "jsdoc": "3.5.5",
    "nodemon": "1.17.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
